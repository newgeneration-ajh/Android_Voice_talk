<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AudioActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:onClick="onRecord" android:text="Record" android:id="@+id/bt_record"/>

        <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:onClick="onPlay" android:text="Play" android:id="@+id/bt_play"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>